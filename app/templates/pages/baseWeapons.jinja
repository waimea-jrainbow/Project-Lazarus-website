{#=====================================================
Things list page
- List of things passed in as 'things' array
- Form for adding a new thing
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

Flask Demo - All Things

{% endblock %}


{% block content %}

<h1 id="title">Weapons</h1>


<article>
    <h1 id="subtitle">Handguns</h1>
    <div class="grid">
            {% for weapon in weapons %}
            {% if weapon.class == 'handgun' %}
            <div class="weapon-cell pico">
                <a href="/weapon/{{ weapon.id }}">
                    {{ weapon.name }}<br>
                    <img src="{{ weapon.image }}" alt="{{ weapon.name }}" class="weapon-image">
                </a>
            </div>
            {% endif %}
            {% endfor %}
    </div>

</article>

<article>
    <h1 id="subtitle">Sub machine guns</h1>
    <div class="grid">
            {% for weapon in weapons %}
            {% if weapon.class == 'subMachineGun' %}
            <div class="weapon-cell pico">
                <a href="/weapon/{{ weapon.id }}">
                    {{ weapon.name }}<br>
                    <img src="{{ weapon.image }}" alt="{{ weapon.name }}" class="weapon-image">
                </a>
            </div>
            {% endif %}
            {% endfor %}
    </div>

</article>

{% endblock %}